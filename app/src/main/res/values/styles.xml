<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!-- Base application theme. END -->

    <!-- Width and height START -->

    <style name="MatchBoth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapBoth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapHeightMatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeightWrapWidth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Width and height END -->

    <!--EditText styles-->

    <style name="EditTextWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_of_edit_text_in_app</item>
        <item name="android:layout_margin">@dimen/small_margin_in_app</item>
        <item name="android:paddingStart">@dimen/padding_start_in_app</item>
        <item name="android:textSize">@dimen/edit_text_size_in_app</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:background">@drawable/change_border_on_focus</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditTextLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin_in_app</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_in_app</item>
        <item name="android:background">@drawable/white_button</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditTextItem">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/item_size_text_header</item>
    </style>

    <!-- End of EditText styles-->

    <!-- TextView styles-->

    <style name="TextInAppWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_start_in_app</item>
        <item name="android:textSize">@dimen/text_size_in_app</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="TextViewWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin_in_app</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_in_app</item>
    </style>

    <style name="TextViewPrimaryDark" parent="TextViewWhite">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewBigWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big_in_app</item>
    </style>

    <style name="TextViewBigPrimary" parent="TextViewBigWhite">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewGroceryListItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:layout_marginStart">@dimen/small_margin_in_app</item>
        <item name="android:textIsSelectable">false</item>

    </style>

    <style name="TextViewGroceryListItemTitle" parent="TextViewGroceryListItem">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- End of TextView styles-->

    <!-- Margins -->


    <style name="LeftAndRightMargin" parent="TextViewGroceryListItem">
        <item name="android:layout_marginLeft">@dimen/small_margin_in_app</item>
        <item name="android:layout_marginRight">@dimen/small_margin_in_app</item>
    </style>

    <style name="LeftAndRightMarginCleanText" parent="TextViewWhite">
        <item name="android:layout_marginLeft">@dimen/small_margin_in_app</item>
        <item name="android:layout_marginRight">@dimen/small_margin_in_app</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">@dimen/horizontal_text_width</item>
        <item name="android:layout_weight">@dimen/one</item>
        <item name="android:layout_margin">@dimen/small_margin_in_app</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="LeftAndRightMarginCleanNumbers" parent="TextViewWhite">
        <item name="android:layout_marginLeft">@dimen/small_margin_in_app</item>
        <item name="android:layout_marginRight">@dimen/small_margin_in_app</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">@dimen/zeroDP</item>
        <item name="android:layout_weight">@dimen/one</item>
        <item name="android:layout_margin">@dimen/small_margin_in_app</item>
    </style>

    <!--Layout styles -->

    <style name="LinearLayoutRoundHorizontalDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin_in_app</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_start_in_app</item>
    </style>

    <style name="LinearLayoutRoundVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/small_margin_in_app</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ScrollViewRoundVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/default_margin_in_app</item>
        <item name="android:orientation">vertical</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--End of Layout styles -->

    <!--Buttons designs-->

    <style name="ButtonLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin_in_app</item>
        <item name="android:textSize">@dimen/text_size_in_app</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/default_button</item>
    </style>

    <style name="ButtonLight.White">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/white_button</item>
    </style>

    <style name="ButtonTabTopMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_in_app</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonTabOperation" parent="ButtonTabTopMenu">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonPink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin_in_app</item>
        <item name="android:textSize">@dimen/text_size_in_app</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/default_button</item>
    </style>

    <style name="ButtonDarkBlue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin_in_app</item>
        <item name="android:textSize">@dimen/text_size_in_app</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/default_button</item>
    </style>

    <style name="ButtonQuantity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin_in_app</item>
        <item name="android:background">@color/white</item>
    </style>


    <!--End buttons designs-->

    <!--Other styles-->

    <style name="DialogAnimations" />
    <style name="DialogAnimations.SmileWindow">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppLogoImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100sp</item>
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:layout_margin">@dimen/small_margin_in_app</item>
    </style>

    <style name="verticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="horizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!--End of Other styles-->

</resources>
