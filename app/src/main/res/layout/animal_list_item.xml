<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WrapHeightMatchWidth"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        style="@style/WrapHeightMatchWidth"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:paddingLeft="10dp">


        <ImageView
            android:id="@+id/animal_image"
            style="@style/WrapHeightMatchWidth"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/nav_header_vertical_spacing_text"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            style="@style/TextViewAnimalListItemTitle"
            android:id="@+id/animal_name"
            tools:hint="Rex"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            style="@style/TextViewAnimalListItem"
            android:id="@+id/animal_type"
            tools:hint="Mužjak"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/animal_desc"
            style="@style/TextViewAnimalListItem"
            tools:hint="Rex je pas velikog rasta koji pomalo vuče na mješanca njemačkog ovčara." />

    </LinearLayout>

</android.support.v7.widget.CardView>